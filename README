INSTALL---
If [ -z $(which autoreconf) ] ; then
  $SCRIPTS/autoconf.sh -i <optional-install-dir>
fi

$SCRIPTS/unixODBC.sh -i <optional-install-dir>
$SCRIPTS/freetds.sh -i <optional-install-dir>


UNINSTALL---
If [ -z $(which autoreconf) ] ; then
  $SCRIPTS/autoconf.sh -u
fi

$SCRIPTS/unixODBC.sh -u
$SCRIPTS/freetds.sh -u


